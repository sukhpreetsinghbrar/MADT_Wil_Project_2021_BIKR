<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/grey">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_bar"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false"
        app:layout_collapseMode="parallax">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
        android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="0.4"                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                android:text="Destination"></TextView>

            <TextView
                android:id="@+id/tvname"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/seq_rounded_white"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="0.5"                android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/white"
                    android:text="Distance"></TextView>

                <TextView
                    android:id="@+id/tv_dis"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/seq_rounded_white"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="      Km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="0.2"                android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/white"
                    android:text="Estimated Price"></TextView>

                <TextView
                    android:id="@+id/tvPrice"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/seq_rounded_white"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="      $"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>




            <TextView
                android:id="@+id/tv_map"
                android:text="Map"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_gravity="center"
                android:background="@drawable/yello_shape_bg"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"></TextView>


            <TextView
                android:id="@+id/tvConfirm"
                android:text="Confirm"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_gravity="center"
                android:background="@drawable/white_bg"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
